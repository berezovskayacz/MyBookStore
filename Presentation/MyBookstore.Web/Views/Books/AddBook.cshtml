@using MyBookstore.Models;
@model MyBookstore.Models.BookViewModel;

@{
    ViewData["Title"] = "Add Book";
}

<!DOCTYPE html>
<html>
<head>
    <title>Adding a book</title>
</head>
<body>
    <div>
        <h3>New book form</h3>
        <p>Add the information</p>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <table>
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td>Author</td>
                    <td>
                        @Html.DropDownList("AuthorId", (IEnumerable<SelectListItem>)ViewBag.Authors)
                    </td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><input type="text" name="Description" /> </td>
                </tr>


                <tr>
                    <td>Picture</td>
                    <td>
                        <input type="file" name="Picture" class="form-control" />
                    </td>
                </tr>


                <tr><td><input type="submit" value="Submit" /> </td><td></td></tr>
            </table>
        </form>
    </div>

    


</body>
</html>