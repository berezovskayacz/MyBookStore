
<body>
    <section class="gallery-block cards-gallery">
        <div class="container">
            <div class="heading">
                <h2>Cards Gallery</h2>
            </div>
            <div class="row">

                @if (Model.ThumbnailName != null)
                {
                    var imagePath = "";
                    foreach (var p in Model.Pictures.Where(n => n.BookId == Model.BookId && n.Main != true))
                    {

                        imagePath = @"/Images/Uploads/" + p.Id + "_" + p.Name.ToString();

                        <div class="card border-0 transform-on-hover">
                            <a class="lightbox" href="@imagePath">
                                <img src="@imagePath" style='width:150px; height:200px;' alt="Card Image" class="card-img-top">
                            </a>
                            <div class="card-body">
                                <h6><a href="#">Lorem Ipsum</a></h6>
                                <p class="text-muted card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc quam urna.</p>
                            </div>

                        </div>
                    }
                }


            </div>
        </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script>
        baguetteBox.run('.cards-gallery', { animation: 'slideIn' });
    </script>
</body>
