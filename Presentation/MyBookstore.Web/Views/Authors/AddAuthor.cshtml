@using MyBookstore.Models;
@model MyBookstore.Models.AuthorViewModel;

@{
    Layout = "~/Views/Layout.cshtml";
}

@{
    ViewData["Title"] = "Add Author";
}

<!DOCTYPE html>
<html>
<head>
    <title>Adding an author</title>
</head>
<body>
    <div>
        <h3>New author form</h3>
        <p>Add the information</p>
        <form method="post">
            <input type="hidden" value="@ViewBag.AuthorId" name="AuthorId" />
            <table>
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td>Surname</td>
                    <td><input type="text" name="Surname" /> </td>
                </tr>
                <tr>
                    <td>Middlename</td>
                    <td><input type="text" name="MiddleName" /> </td>
                </tr>
                <tr>
                    <td>Birth Year</td>
                    <td><input type="text" name="BirthYear" /> </td>
                </tr>
                <tr>
                    <td>Death Year</td>
                    <td><input type="text" name="DeathYear" /> </td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><input type="text" name="Description" /></td>
                </tr>

                <tr><td><input type="submit" value="Submit" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>